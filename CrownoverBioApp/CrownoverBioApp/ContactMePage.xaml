<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrownoverBioApp.ContactMePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="White" Spacing="10" Padding="0">
                <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                    <Button                  
                    BackgroundColor="DimGray"
                    WidthRequest="35"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    HeightRequest="50"
                    Opacity=".5"
                        x:Name="Backbutton"
                        Clicked="Backbutton_Clicked"
                    />
                    <Label               
                Text="           Lydia Crownover"
            
               BackgroundColor="White"
             HorizontalOptions="Center"
                       WidthRequest="325"
             HorizontalTextAlignment="Start"
             VerticalTextAlignment="Center"        
             VerticalOptions="Start"
                       HeightRequest="60"
               FontFamily="Century Gothic"
               TextColor="Purple"
               FontSize="24"
               />
                </StackLayout>
                <BoxView                      
                     BackgroundColor=" Black"
                        HorizontalOptions="Fill"
                        VerticalOptions="Start"                   
                        HeightRequest="5"
                        Opacity=".5"
                    />
                <StackLayout Orientation="Horizontal" Padding="30" Spacing="40">
                    <Image x:Name="contacticon"
                    Source="contacticon.png"
                      VerticalOptions="Center"
                       WidthRequest="80"
                       HeightRequest="80"
                      BackgroundColor="Purple"
                    />
                    <Label Text="Contact Me"
                   TextColor="Purple"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="18"
                />
                </StackLayout>
                <Entry x:Name="nameEntry" Placeholder="Name"
                 TextColor="DarkGray"
               />
                <Entry x:Name="emailEntry" Placeholder="Email"
                 TextColor="DarkGray"
                />
                <Entry x:Name="numberEntry" Placeholder="Phone Number"
                 TextColor="DarkGray"
                />
                <Label Text="Leave Me a Message Here!"
                />
                <Editor x:Name="messageEditor" HeightRequest="100"
                />
                <Button Text="Submit"
                    BackgroundColor="MediumOrchid"
                    TextColor="White"
                   Clicked="Button_Clicked"
                />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>