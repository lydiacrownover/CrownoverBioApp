             xmlns:local="clr-namespace:CrownoverBioApp"
             x:Class="CrownoverBioApp.MainPage">

<ScrollView>
        <StackLayout BackgroundColor="White">
            <Grid>
                <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Label Text="Lydia Crownover"
               Margin="17"
